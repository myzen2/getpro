<div class="container">
  <h1 id="up">Liste des utilisateurs</h1>
  <a href="#down"><%= image_tag "arrow_down", id: "arrow_down" %></a>
<br>
<table>
  <thead>
    <th>Prénom</th>
    <th>NOM</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </thead>

  <% @users.each do |user| %>
  <tbody>
    <% if user.id != current_user.id %>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>

      <td><%= link_to "Ajouter en tant qu'ami", friendships_path(friend_id: user), method: :post %></td>

    <% end %>
  </tbody>
  <% end %>
</table>


    <hr>

    <h2 id="down">Liste de mes amis</h2>
    <a href="#up"><%= image_tag "arrow_up", id: "arrow_up" %></a>
      <table>
        <thead>
          <th>Prénom</th>
          <th>NOM</th>
          <th>Email</th>
          <th>Action</th>
        </thead>

      <% for friendship in @user.friendships %>
      <tbody>
        <td><%= friendship.friend.first_name %></td>
        <td><%= friendship.friend.last_name %></td>
        <td><%= friendship.friend.email %></td>
        <td><%= link_to 'Supprimer cet ami', friendship, method: :delete %></td>
      </tbody>
      <% end %>

  </table>
</div>
